    <StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="panneauNvCarte2" maxHeight="-Infinity" maxWidth="-Infinity"
               minHeight="-Infinity" minWidth="-Infinity" prefHeight="850.0" prefWidth="1450.0"
               visible="false" xmlns="http://javafx.com/javafx/23.0.1">
        <AnchorPane prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/parametre.css">
            <Pane layoutX="300.0" layoutY="79.0" prefHeight="437.0" prefWidth="850.0"
                  styleClass="dark_petit_panneau" stylesheets="@../css/parametre.css"
                  AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0">
