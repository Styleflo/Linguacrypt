                    <Label layoutX="27.0" layoutY="1.0" prefHeight="77.0" prefWidth="369.0" text="Mot"
                           textFill="WHITE"/>
                </Pane>
            </Pane>
        </AnchorPane>
    </StackPane>
</StackPane>
