                </Pane>
                <Pane layoutX="107.0" layoutY="269.0" prefHeight="88.0" prefWidth="654.0"
                      styleClass="red_petit_panneau">
                    <TextField fx:id="firstCardInput" layoutX="410.0" layoutY="21.0" prefHeight="47.0"
                               prefWidth="221.0"/>
                    <Label layoutX="30.0" layoutY="1.0" prefHeight="88.0" prefWidth="369.0"
                           text="Première carte du thème" textFill="WHITE"/>
                </Pane>
            </Pane>
        </AnchorPane>
