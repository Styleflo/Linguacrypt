                    <styleClass>
                        <String fx:value="blue_petit_panneau"/>
                        <String fx:value="dark_petit_panneau"/>
                    </styleClass>
                    <Label layoutX="25.0" layoutY="21.0" textFill="WHITE"/>
                    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="7.0" layoutY="21.0"
