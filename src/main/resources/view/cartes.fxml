                    <String fx:value="scroll-bar"/>
                </styleClass>
                <GridPane fx:id="gridPane" prefHeight="567.0" prefWidth="1052.0">
                    <columnConstraints>
                        <ColumnConstraints/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                    </rowConstraints>
                    <styleClass>
                        <String fx:value="light_petit_panneau"/>
                        <String fx:value="bordure_speciale"/>
                    </styleClass>
                </GridPane>
            </ScrollPane>
            <Button layoutX="218.0" layoutY="630.0" onAction="#previousCategory" prefHeight="66.0"
