    <ImageView fitHeight="850.0" fitWidth="1450.0" pickOnBounds="true">
        <Image url="@../assets/fond_flou.gif"/>
    </ImageView>
    <ImageView fitHeight="850.0" fitWidth="1450.0" opacity="0.18" pickOnBounds="true" preserveRatio="true">
