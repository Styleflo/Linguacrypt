                        onAction="#handleValiderPopup" prefHeight="71.0" prefWidth="221.0" text="Valider"
                        textAlignment="CENTER" textFill="WHITE">
                    <styleClass>
                        <String fx:value="button1"/>
                        <String fx:value="green_button"/>
                    </styleClass>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" graphicTextGap="5.0" layoutX="489.0"
                        layoutY="408.0" mnemonicParsing="false" onAction="#handleAnnulerpopup"
                        prefHeight="71.0" prefWidth="221.0" text="Annuler" textAlignment="CENTER"
                        textFill="WHITE">
                    <styleClass>
                        <String fx:value="button1"/>
                        <String fx:value="orange_button"/>
                    </styleClass>
                </Button>
                <Pane layoutX="107.0" layoutY="155.0" prefHeight="88.0" prefWidth="654.0"
                      styleClass="blue_petit_panneau">
