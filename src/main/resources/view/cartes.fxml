            </Button>
            <Button layoutX="141.0" layoutY="708.0" mnemonicParsing="false" onAction="#handleRevenirMenuAction"
                    prefHeight="66.0" prefWidth="282.0" text="Menu principal">
                <styleClass>
                    <String fx:value="button1"/>
                    <String fx:value="w"/>
                    <String fx:value="orange_button"/>
                </styleClass>
            </Button>
            <Pane layoutX="304.0" layoutY="630.0" prefHeight="66.0" prefWidth="527.0"
                  styleClass="red_petit_panneau">
                <Label fx:id="themeLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="11.0"
                       layoutY="18.0" prefHeight="30.0" prefWidth="502.0" text="Collection Actuelle"
                       textFill="WHITE"/>
            </Pane>
            <Button layoutX="714.0" layoutY="708.0" mnemonicParsing="false" onAction="#addNewTheme"
                    prefHeight="66.0" prefWidth="253.0" text="Nouveau thème">
                <styleClass>
                    <String fx:value="button1"/>
                    <String fx:value="w"/>
                    <String fx:value="orange_button"/>
                </styleClass>
            </Button>
            <Button layoutX="441.0" layoutY="708.0" onAction="#handleAjouterMotAction" prefHeight="66.0"
                    prefWidth="253.0" text="Ajouter une carte">
                <styleClass>
                    <String fx:value="button1"/>
                    <String fx:value="purple_button"/>
                </styleClass>
            </Button>
            <ImageView fx:id="filtre" fitHeight="790.0" fitWidth="1142.0" layoutY="3.0" opacity="0.21"
                       pickOnBounds="true">
                <effect>
                    <GaussianBlur radius="22.75"/>
                </effect>
                <Image url="@../assets/filtre.png"/>
            </ImageView>
            <Button layoutX="1044.0" layoutY="630.0" onAction="#CategoryImage" prefHeight="66.0"
