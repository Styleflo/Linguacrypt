<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="linguacrypt.controller.WinnerPopupController"
           fx:id="root"
           styleClass="popup-overlay">
    <AnchorPane styleClass="popup-container" maxWidth="300" maxHeight="200">
        <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="20.0"
              AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0">
            <Label fx:id="winnerLabel" style="-fx-text-fill: #ffffff; -fx-font-size: 18px; -fx-text-alignment: center;"
                   wrapText="true" maxWidth="250"/>
            <Button fx:id="okButton" text="OK" onAction="#handleOkButton"
                    styleClass="button1"/>
        </VBox>
    </AnchorPane>
</StackPane>
